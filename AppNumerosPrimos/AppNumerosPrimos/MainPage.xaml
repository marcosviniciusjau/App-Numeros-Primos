<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppNumerosPrimos.MainPage">

    <StackLayout BackgroundColor="#999"
                 Padding="10">
        <Label Text="NÚMEROS PRIMOS"
               HorizontalTextAlignment="Center"
               FontSize="Title"
               FontAttributes="Bold"
               TextColor="White" />
        <Label Text="Numero 1:"/>
        <Entry x:Name="Inicial" Keyboard="Numeric"/>

        <Label Text="Numero 2:"/>
        <Entry x:Name="Final" Keyboard="Numeric"/>
        
                <Button Text="Ver"
                HorizontalOptions="Center"
               Clicked="Button_Clicked"    />
    </StackLayout>
  
</ContentPage>